pipeline {
    agent any
    environment {
        LABS = credentials('labcreds')
    }
    stages {
        stage('Build') {
            steps {
                sh '''
                    # create local venv inside workspace
                    python3 -m venv .venv
                    . .venv/bin/activate
                    
                    # install pipenv inside the venv
                    pip install --upgrade pip
                    pip install pipenv
                    
                    # clean old env if exists, then install dependencies
                    pipenv --rm || true
                    pipenv install
                '''
            }
        }
        stage('Test') {
            steps {
                sh '''
                    . .venv/bin/activate
                    pipenv run pytest
                '''
            }
        }
        stage('Package') {
            steps {
                sh 'zip -r retailproject.zip .'
            }
        }
        stage('Deploy') {
            steps {
                sh '''
                    sshpass -p $LABS_PSW scp -o StrictHostKeyChecking=no -r . \
                    $LABS_USR@g02.itversity.com:/home/itv022118/retailproject
                '''
            }
        }
    }
}
